{% extends 'base.html.twig' %}

{% block title %}Publisher Edit{% endblock %}

{% block body %}
    <h1>Publisher Edit</h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <div class="form-group">
        <div class="col-sm-2"></div>

        <div class='btn-toolbar pull-left'>
            <div class='btn-group'>
                <input type="submit" value="Update" class="btn btn-primary" />
                <a href="{{ path('publisher_show', { 'id': publisher.id }) }}" class="btn btn-warning">Cancel</a>
            </div>
        </div>

        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('place_new_popup') }}" class="btn btn-primary popup" id="newPlace"><span class="glyphicon glyphicon-plus"></span> Place</a>
            </div>
        </div>
    </div>
    {{ form_end(edit_form) }}

{% endblock %}

{% block javascripts %}
    {% include '@NinesEditor/editor/widget.html.twig' %}
    <script>
        $(".popup").click(function (e) {
            e.preventDefault();
            var url = $(this).prop('href');
            window.open(url, "_blank", "toolbar=no,scrollbars=yes,resizable=yes,top=60,left=60,width=500,height=600");
        });
    </script>
{% endblock %}
